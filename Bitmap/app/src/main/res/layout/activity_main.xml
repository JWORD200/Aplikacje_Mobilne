<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/imageDimensions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wymiary obrazka"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sigma" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokaż obrazek" />

    <Button
        android:id="@+id/btnHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schowaj obrazek" />

    <Button
        android:id="@+id/btnRotateLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Przekręć w lewo" />

    <Button
        android:id="@+id/btnRotateRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Przekręć w prawo" />

    <Button
        android:id="@+id/btnSetDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przyciemnij obrazek"/>


</LinearLayout>
